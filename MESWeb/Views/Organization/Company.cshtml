@model IEnumerable<string>
@{
    ViewBag.Title = "Company";
    ViewBag.Breadcrumb = "Company";
    int _countCompany = 0;
}

@section Javascript{
    <script src="@Url.Content("~/Scripts/organization.js?v=1.1")" type="text/javascript"></script>
}

<div class="row-fluid">
    <div class="widget-box">
        <div class="widget-title">
            <span class="icon"><i class="icon-th"></i></span>
            <h5>Company List</h5>
        </div>

        <div class="widget-content nopadding">
            <table class="table table-bordered table-striped data-table">
                <thead>
                    <tr>
                        <th style="width:50px;">#</th>
                        <th style="cursor: pointer;">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td><a href="#" class="btnEditCompany" data-id="company@_countCompany">Edit</a></td>
                            <td id="company@_countCompany">@item</td>
                        </tr>
                        _countCompany++;
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>

<div id="modalCompanyForm" class="modal hide">
    <div class="modal-header">
        <button data-dismiss="modal" class="close" type="button">x</button>
        <h3>Change name of company</h3>
    </div>
    <div class="modal-body">
        <div class="widget-content nopadding">
            <div class="control-group">
                <label class="control-label">
                    Company:
                </label>
                <div class="controls">
                    <input type="text" id="txtCompanyName" />
                    <input type="hidden" id="hidCompanyName" />
                    <input type="hidden" id="hidCompanyFormId" />
                    <input type="button" id="btnSaveCompany" class="btn btn-info" value="Save change" style="margin-left: 30px;margin-top: -10px;" />
                </div>
            </div>
        </div>
    </div>
</div>

